Project Apache {
    Roles: Developer, Committer, PMCMember, PMCChair
    Deadlines:
        twoDays : 3600
    Rules:
        codeRule : Ratio {
            applied to TASK "(tag = code)"
            when TASK_REVIEW
            people Developer, Committer,
            PMCMember, PMCChair
            range PRESENT
            min votes 3
            ratio 1.0
            deadline twoDays
        },
        noCodeRule : Majority {
            applied to TASK "(tag != code)"
            when TASK_REVIEW
            people Developer, Committer,
            PMCMember, PMCChair
            range PRESENT
            min votes 3
            deadline twoDays
        }
}